<%= form_for(@service_request) do |f| %>
  <%#= debug @service_request.errors %>
  <% if @service_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service_request.errors.count, "falla") %> no se puede generar la solicitud de servicio:</h2>

      <ul>
      <% @service_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="container smfont be-round_ligth_gray ">
    <div class="row">
      <div class="col-xs-5 col-md-2">
        <%= f.label :Tipo %><br>
        <%= f.select :kind, [ ['DIAGNOSTICO'], ['MANTENIMIENTO'], ['REPARACION'] ], {:include_blank => true}, 
          {class:'btn  dropdown-toggle smfont'} %>
      </div>
      <div class="col-xs-7 col-md-6">
        <%= f.label :DIagnostico_TI %><br>
        <%= f.text_field :itDiagnosis, class:'form-control xsfont' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-md-2">
        <%= f.label :Solicitud %><br>
        <%= f.text_field :DocumentRequest, class:'form-control xsfont' %>
      </div>
      <div class="col-xs col-md-3">
        <%= f.label :Fecha_solicitud %><br>
        <%= f.date_select :RequestDate, {order: [:day, :month, :year], :include_blank => true},  {} %>
      </div>
      <div class="col-xs col-md-2">
        <%= f.label :Delegacion %><br>
        <%= f.collection_select(:Delegation_id, Delegation.all, :id, :name, 
          {:include_blank => true }, {class:'btn  dropdown-toggle smfont delegation_collection'} ) %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-md-5">
        <%= f.label :Dependencia %><br>
        <%= f.collection_select(:Dependency_id, @dependencies, :id, :name,
          {:include_blank => true }, {class:'btn  dropdown-toggle smfont dependencies_collection'} ) %>
      </div>
      <div class="col-xs col-md-2">
        <%= f.label :Copiadoras %><br>
        <%= f.collection_select(:Copier_id, @copiers, :id, :ninventary,
          {:include_blank => true }, {class:'btn  dropdown-toggle smfont copiers_collection'} ) %>
      </div>
      <div class="col-xs col-md-5">
        <%= f.label :Proveedores %><br>
        <%= f.collection_select(:Provider_id, Provider.all, :id, :name,  {:include_blank => true }, 
        {class:'btn  dropdown-toggle smfont'} )%>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3 col-md-3">
        <%= f.label :Impresoras %><br>
        <%= f.collection_select(:Printer_id, @printers, :id, :ninventary, {:include_blank => true }, 
        {class:'btn  dropdown-toggle smfont printers_collection'} ) %>      
      </div>
      <div class="col-xs-3 col-md-3">
        <%= f.label :Telefonos %><br>
        <%= f.collection_select(:Telephone_id, @telephones, :id, :ninventary, {:include_blank => true }, 
        {class:'btn  dropdown-toggle smfont telephones_collection'} ) %>
      </div>
      <div class="col-xs-3 col-md-3">
         <%= f.label :Monitores %><br>
        <%= f.collection_select(:Screen_id, @screens, :id, :ninventary, {:include_blank => true }, 
        {class:'btn  dropdown-toggle smfont screens_collection'} ) %>
      </div>
      <div class="col-xs-3 col-md-3">
        <%= f.label :Regulador_ups %><br>
        <%= f.collection_select(:Power_id, @powers, :id, :ninventary, {:include_blank => true }, 
        {class:'btn  dropdown-toggle smfont powers_collection'} ) %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-md">
        <span class="pull-right">
          <br>
          <br>
          <%= f.submit %>
        </span>
      </div>
    </div>
 </div>
<% end %>
