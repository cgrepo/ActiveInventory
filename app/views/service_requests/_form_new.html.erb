<%= form_for(@service_request) do |f| %>
  <% if @service_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service_request.errors.count, "error") %> prohibited this service_request from being saved:</h2>

      <ul>
      <% @service_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="container smfont be-round_ligth_gray ">
  <div class="row">
    <div class="col-xs-5 col-md-2">
      <%= f.label :Tipo %><br>
      <%= f.select :kind, [ ['DIAGNOSTICO'], ['MANTENIMIENTO'], ['REPARACION'] ], {:include_blank => true}, 
        {class:'btn  dropdown-toggle smfont'} %>
    </div>
    <div class="col-xs-7 col-md-6">
      <%= f.label :DIagnostico_TI %><br>
      <%= f.text_field :itDiagnosis, class:'form-control xsfont' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs col-md-2">
      <%= f.label :Solicitud %><br>
      <%= f.text_field :DocumentRequest, class:'form-control xsfont' %>
    </div>
    <div class="col-xs col-md-3">
      <%= f.label :Fecha_solicitud %><br>
      <%= f.date_select :RequestDate, {order: [:day, :month, :year]} %>
    </div>
    <div class="col-xs col-md-2">
      <%= f.label :Delegacion %><br>
      <%= f.collection_select(:Delegation_id, Delegation.all, :id, :name, 
        {:include_blank => true }, {class:'btn  dropdown-toggle smfont delegation_collection'} ) %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs col-md-5">
      <%= f.label :Dependencia %><br>
      <%= f.collection_select(:Dependency_id, @dependencies, :id, :name,
        {:include_blank => true }, {class:'btn  dropdown-toggle smfont dependencies_collection'} ) %>
    </div>
    <div class="col-xs col-md-2">
      <%= f.label :Copier_id %><br>
      <%= f.collection_select(:Copier_id, Copier.all.where(Dependency_id:118), :id, :ninventary,
        {:include_blank => true }, {class:'btn  dropdown-toggle smfont'} ) %>
    </div>
    <div class="col-xs col-md-5">
      <%= f.label :Provider_id %><br>
      <%= f.collection_select(:Provider_id, Provider.all, :id, :name,  {:include_blank => true }, {class:'btn  dropdown-toggle smfont'} )%>
    </div>
  </div>
  <div class="row">
    <div class="col-xs col-md">
      <br>
      <br>
      <%= f.submit %>    
    </div>
  </div>
 </div>
<% end %>
