<div class="container-fluid large-padding">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <p id="notice"><%= notice %></p>
      <h1>Listado de Sistemas Operativos</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left">
         <%= will_paginate(@osies) %>
      </span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right">
        <%= link_to 'Agregar OS', new_osy_path, class:'btn btn-default  btn-lg' %>
      </span>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs col-md-10">
      <div class="table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <th>Sistema Operativo</th>
            <th colspan="2"></th>  
          </thead>
          <tbody>
            <% @osies.each do |osy| %>
              <tr>
                <td><%= osy.combined_value %></td>
                <td align="right">
                  <%= link_to 'Editar', edit_osy_path(osy), class:'btn btn-default  btn-sm' %>
                  <%= link_to 'Borrar', osy, method: :delete, data: { confirm: 'Esta usted seguro?' }, 
                    class:'btn btn-default  btn-sm' %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>