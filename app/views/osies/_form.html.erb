        <%= f.label :version %><br>
        <%= f.select :version, [ ['x32'], ['x64'] ], {:include_blank => true}, {class:'btn btn-default dropdown-toggle smfont'} %><br>
      </div>
        
    </div>
    <div class="row">
      <div class="col-xs col-md-5 be-round_ligth_gray large-padding">
