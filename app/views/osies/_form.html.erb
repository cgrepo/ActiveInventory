      <h2><%= pluralize(@osy.errors.count, "error") %> prohibited this osy from being saved:</h2>

      <ul>
      <% @osy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container smfont">
    <div class="row">
      <div class="col-xs-8 col-md-4 be-round_ligth_gray large-padding">
        <%= f.label :Nombre %><br>
