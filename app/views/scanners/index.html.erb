<div class="container-fluid be-soft_purple">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>
      <h1>Listado de Escaners</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left"><%= will_paginate @scanners %></span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right"><%= link_to 'Agregar', new_scanner_path, class:'btn btn-default btn-lg be-gray' %></span>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="table-responsive no-margins">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Inventario</th>
          <th>Serie</th>
          <th>Marca</th>
          <th>Model0</th>
          <th>Delegacion</th>
          <th>Dependencia</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @scanners.each do |scanner| %>
          <tr>
            <td><%= scanner.ninventary %></td>
            <td><%= scanner.nserie %></td>
            <td><%= scanner.brand %></td>
            <td><%= scanner.model %></td>
            <td><%= scanner.Delegation.name %></td>
            <td><%= scanner.Dependency.name %></td>
            <td><%= link_to 'Show', scanner %></td>
            <td><%= link_to 'Edit', edit_scanner_path(scanner) %></td>
            <td><%= link_to 'Destroy', scanner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
