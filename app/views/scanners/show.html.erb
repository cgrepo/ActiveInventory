<p id="notice"><%= notice %></p>
<div class="container be-gray">
  <div class="row">
    <div class="col-xs">
      <p>
        <strong>INVENTARIO:</strong>
        <%= @scanner.ninventary %>
      </p>
      <p>
        <strong>SERIE:</strong>
        <%= @scanner.nserie %>
      </p>
      <p>
        <strong>MARCA:</strong>
        <%= @scanner.brand %>
      </p>
      <p>
        <strong>MODELO:</strong>
        <%= @scanner.model %>
      </p>
      <p>
        <strong>FACTURA:</strong>
        <%= @scanner.nfactura %>
      </p>
      <p>
        <strong>FECHA COMPRA:</strong>
        <%#= @scanner.buy_date %>
      </p>
      <% if @scanner.net %>
        <p>
          <strong>Ipnet:</strong>
          <%= @scanner.ipnet %>
        </p>
        <p>
          <strong>Masknet:</strong>
          <%= @scanner.masknet %>
        </p>
        <p>
          <strong>Netmac:</strong>
          <%= @scanner.netmac %>
        </p>
      <% end %>
      <% unless @scanner.operational %>
        <p>
          <strong>No Operacional:</strong>
          <%= @scanner.reazon %>
        </p>
      <% end %> 
      <p>
        <strong>Delegation:</strong>
        <%#= Delegation.find(@scanner.delegation_id).name %>
      </p>
      <p>
        <strong>Dependency:</strong>
        <%#= Dependency.find(@scanner.dependency_id).name %>
      </p>
      <p>
        <strong>Network:</strong>
        <%#= Network.find(@scanner.network_id).location %>
      </p>
     </div>
  </div>
  <div class="row be-soft_purple">
    <div class="col-xs col-md">
      <p align="right">
        <strong>ULTIMA MODIFICACION</strong><br>
        <%= @scanner.user_id ? User.find(@scanner.user_id).username : "FALTA ASIGNAR"  %>
      </p>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <span class="pull-right">
        <br>
        <%= link_to 'Editar', edit_scanner_path(@scanner), class:'btn btn-default btn-lg' %> |
        <%= link_to 'Regresar', scanners_path, class:'btn btn-default btn-lg' %>
      </span>
    </div>
  </div>
</div>

