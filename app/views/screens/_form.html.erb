<%= form_for(@screen) do |f| %>
  <% if @screen.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@screen.errors.count, "error") %> prohibido este monitor de ser salvado:</h2>
      <ul>
      <% @screen.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container large-padding be-round_ligth_gray">
    <div class="row">
      <div class="col-xs col-md-2">
        <%= f.label :Inventario %><br>
        <%= f.text_field :ninventary, class:'form-control smfont' %>
      </div>
      <div class="col-xs col-md-2">
        <%= f.label :Serie %><br>
        <%= f.text_field :nserie, class:'form-control smfont' %>
      </div>
      <div class="col-xs-5 col-md-2">
        <%= f.label :Factura %><br>
        <%= f.text_field :nfactura, class:'form-control smfont' %>
      </div>
      <div class="col-xs col-md-2">
        <%= f.label :Modelo %><br>
        <%= f.collection_select(:model, BrandModel.where(description:"MONITOR"), :modelx, :modelx, 
        {:include_blank => true }, {class:'btn  dropdown-toggle smfont'} ) %>
      </div>
      <div class="col-xs col-md-2">
        <%= f.label :Pulgadas %><br>
        <%= f.select :inch, [['14.0'], ['14.5'], ['15.0'], ['17.0'], ['19.0'], ['21.0'] ], {include_blank: true}, 
          {class:'btn  dropdown-toggle smfont'} %>
          <%#= f.text_field :inch %>
      </div>
      <div class="col-xs col-md-2">
        <%= f.label :Marca %><br>
        <%= f.collection_select(:brand, BrandModel.where(description:"MONITOR").group([:id,:brandx]), :brandx, :brandx, 
          {:include_blank => true }, {class:'btn  dropdown-toggle smfont'} ) %>
          <%#= f.text_field :brand %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-md-4">       
        <%= f.label :Fecha_compra %><br>
        <%= f.date_select :buy_date, {:include_blank => true, order: [:day, :month, :year]}, {class:'btn dropdown-toggle'} %>
      </div>
      <div class="col-xs-12 col-md-4">
        <%= f.label :Dependency_id %><br>
        <%= f.collection_select(:Dependency_id, Dependency.all.order(:name), :id, :name, {include_blank: true}, 
          {class:'btn  dropdown-toggle smfont'}) %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8 col-md-6">        
        <%= f.label :Notas %><br>
        <%= f.text_area :notes, size:"60x2", class:'form-control smfont' %>
      </div>
    </div>
    <div class="row large-padding">
      <div class="col-xs-4 col-md-4">      
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
