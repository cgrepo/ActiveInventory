<%= form_for(@screen) do |f| %>
  <% if @screen.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@screen.errors.count, "error") %> prohibido este monitor de ser salvado:</h2>

      <ul>
      <% @screen.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg">
        <div class="box">
          <%= f.label :Inventario %><br>
          <%= f.text_field :ninventary %>
        </div>
      </div>

      <div class="col-lg">
        <div class="box">
          <%= f.label :Serie %><br>
          <%= f.text_field :nserie %>
        </div>
      </div>

      <div class="col-lg">
        <div class="box">
          <%= f.label :Marca %><br>
          <%= f.select :brand, [['HP'], [''], ['']] %>
          <%#= f.text_field :brand %>
        </div>
      </div>

      <div class="col-lg">
        <div class="box">
          <%= f.label :Modelo %><br>
          <%= f.text_field :model %>
        </div>
      </div>

      <div class="col-lg">
        <div class="box">
          <%= f.label :ID_Factura %><br>
          <%= f.text_field :nfactura %>
        </div>
      </div>

      <div class="col-lg">
        <div class="box">
          <%= f.label :Fecha_compra %><br>
          <%= f.date_select :buy_date %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2">
        <div class="box">
          <%= f.label :Pulgadas %><br>
          <%= f.select :inch, [['14.0'], ['14.5'], ['15.0'], ['17.0'], ['19.0'], ['21.0'] ] %>
          <%#= f.text_field :inch %>
        </div>
      </div>
      <div class="col-lg">
        <div class="box">
          <%= f.label :Notas %><br>
          <%= f.text_area :notes, size:"80x4" %>
        </div>
      </div>
      <div class="col-lg">
        <div class="box">
          <%= f.label :Dependency_id %><br>
          <%= f.collection_select(:Dependency_id, Dependency.all, :id, :name) %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg">
        <div class="box">
          <%= f.submit %>
        </div>
      </div>
    </div>
  </div>
<% end %>
