<p id="notice"><%= notice %></p>

<h1>Listado de Monitores</h1>

<table>
  <thead>
    <tr>
      <th>No inventario</th>
      <th>No serie</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>ID factura</th>
      <th>Fecha compra</th>
      <th>Pulgadas</th>
      <!--
      <th>Operational</th>
      <th>Reazon</th>
    -->
      <th>Notas</th>
      <th>Dependencia</th>
      <th>Computadora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screens.each do |screen| %>
      <tr>
        <td><%= screen.ninventary %></td>
        <td><%= screen.nserie %></td>
        <td><%= screen.brand %></td>
        <td><%= screen.model %></td>
        <td><%= screen.nfactura %></td>
        <td><%= screen.buy_date %></td>
        <td><%= screen.inch %></td>
        <td><%= screen.operational %></td>
        <td><%#= screen.reazon %></td>
        <td><%#= screen.notes %></td>
        <td><%= screen.Dependency %></td>
        <td><%= screen.Computer %></td>
        <td><%= link_to 'Mostrar', screen %></td>
        <td><%= link_to 'Editar', edit_screen_path(screen) %></td>
        <td><%= link_to 'Borrar', screen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

