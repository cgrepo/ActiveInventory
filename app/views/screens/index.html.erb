<div class="container-fluid be-soft_purple ">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>
      <h1>Listado de Monitores</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left">
        <%= will_paginate @screens %>
      </span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right">
        <%= link_to 'Agregar', new_screen_path, class:'btn btn-default btn-lg be-gray' %>
      </span>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="table-responsive no-margins">
    <table class="table table-hover table-striped">
      <thead>
        <th>Inventario</th>
        <th>Serie</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Dependencia</th>
        <th></th>
      </thead>
      <tbody>
        <% @screens.each do |screen| %>
          <tr>
            <td> <%= screen.ninventary %></td>
            <td> <%= screen.nserie %></td>
            <td> <%= screen.brand %></td>
            <td> <%= screen.model %></td>
            <td> <%= screen.Dependency.name if screen.Dependency %></td>
            <td>
              <%= link_to 'Mostrar', screen, class:'btn btn-default  btn-sm' %>
              <%= link_to 'Editar', edit_screen_path(screen), class:'btn btn-default  btn-sm' %>
              <%= link_to 'Borrar', screen, method: :delete, data: { confirm: 'Esta usted seguro?' }, class:'btn btn-default  btn-sm' %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

 