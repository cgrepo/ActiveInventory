<%= form_for(@processor) do |f| %>
  <% if @processor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@processor.errors.count, "error") %> no se puede salvar este procesador!</h2>

      <ul>
      <% @processor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-md-2 be-soft_gray">
        <%= f.label :MARCA %><br>
        <%= f.select :brand, [ ['Intel(R)'], ['AMD(R)'] ], {:include_blank => true}, {class:'btn btn-default dropdown-toggle smfont'} %>
          <%#= f.text_field : %>      
      </div>
      <div class="col-xs-3 col-md-2 be-soft_gray">
        <%= f.label :TIPO %><br>
        <%= f.select :genus, [ ['Atom(TM)'], ['Core(TM)'], ['Celeron(R)'], ['Pentium(R)'], ['Xenon(R)']], {:include_blank => false}, 
          {class:'btn btn-default dropdown-toggle smfont'} %>
      </div>
      <div class="col-xs-3 col-md-2 be-soft_gray">
        <%= f.label :MODELO %><br>
        <%= f.text_field :modelp, class:'form-control smfont ups' %>
      </div>
      <div class="col-xs-3 col-md-2 be-soft_gray" >
        <%= f.label :VELOCIDAD %><br>
        <%= f.text_field :speed, class:'form-control smfont' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-8 be-soft_gray">
        <br>
        <br>
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
