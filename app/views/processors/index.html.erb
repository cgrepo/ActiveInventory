<div class="container-fluid large-padding">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <p id="notice"><%= notice %></p>
      <h1>Listado Procesadores</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left">
        <%= will_paginate @processors %>
      </span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right">
        <%= link_to 'Agregar', new_processor_path, class:'btn btn-default btn-lg ' %>
      </span>
    </div>
      
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md">
      <div class="table-responsive no-margins">
        <table class="table table-hover table-striped">
          <thead>
            <th>Marca</th>
            <th>Tipo</th>
            <th>Modelo</th>
            <th>Velocidad</th>
            <th colspan="2"></th>
          </thead>
          <tbody>
            <% @processors.each do |processor| %>
              <tr>
                <td> <%= processor.brand %></td>
                <td> <%= processor.genus %></td>
                <td> <%= processor.modelp %></td>
                <td> <%= processor.speed %></td>
                <td align="right">
                  <%= link_to 'Editar', edit_processor_path(processor), class:'btn btn-default  btn-sm' %>
                  <%= link_to 'Borrar', processor, method: :delete, data: { confirm: 'Esta usted seguro?' }, class:'btn btn-default  btn-sm' %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

