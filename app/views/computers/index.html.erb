<p id="notice"><%= notice %></p>

<h1>Listado de Computadoras</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs">
      <div class="box">
        INVENTARIO
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        SERIE
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        MARCA
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        MODELO
      </div>
    </div>
    <div class="col-xs"><div class="box"></div></div>
  </div>

  <% @computers.each do |computer| %>
    <div class="row">
      <div class="col-xs">    
        <div class="box">
          <%= computer.ninventary %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= computer.nserie %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= computer.brand %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= computer.model %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box"><%= link_to 'Mostrar', computer %> <%= link_to 'Editar', edit_computer_path(computer) %> <%= link_to 'Borrar', computer, method: :delete, data: { confirm: 'Esta seguro?' } %></div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs">
      <div class="box">
        <%= will_paginate @computers %>
        <br>
        <br>
        <%= button_to 'Nueva Computadora', new_computer_path, method: :get %>        
        <%#= link_to 'Agregar computadora', new_computer_path %>
      </div>
  </div>
  </div>
</div>