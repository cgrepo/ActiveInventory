
<div class="container-fluid be-soft_purple large-padding">
  <p id="notice"><%= notice %></p>
  <h1>Listado de Computadoras</h1>
</div>
<div class="container-fluid">
  <div class="row be-gray">
    <div class="col-xs">
      <div class="box">
        INVENTARIO
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        SERIE
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        MARCA
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        MODELO
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        DEPENDENCIA
      </div>
    </div>
    <div class="col-xs"><div class="box"></div></div>
  </div>

  <% @computers.each do |computer| %>
    <div class="row <%= cycle('be-soft_gray','odd')%>">
      <div class="col-xs">    
        <div class="box">
          <%= computer.ninventary %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= computer.nserie %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= computer.brand %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= computer.model %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= computer.Dependency.name %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box"><%= link_to 'Mostrar', computer %> <%= link_to 'Editar', edit_computer_path(computer) %> <%= link_to 'Borrar', computer, method: :delete, data: { confirm: 'Esta seguro?' } %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs">
      <div class="box">
        <%= will_paginate @computers %>
        <br>
        <br>
        <%= button_to 'Nueva Computadora', new_computer_path, method: :get %>        
      </div>
    </div>
  </div>
</div>