
<div class="container-fluid be-soft_purple large-padding">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>
      <h1>Listado de Computadoras</h1>
  </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left"><%= will_paginate @computers %></span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right"><%= button_to 'Agregar', new_computer_path, method: :get, class:'btn btn-default btn-lg be-gray' %>
      </span>
    </div>
  </div>
  
</div>
<div class="container-fluid">
  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <th>Inventario</th>
        <th>Serie</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Dependencia</th>
        <th></th>
      </thead>
      <tbody>
        <% @computers.each do |computer| %>
          <tr>
            <td><%= computer.ninventary %></td>
            <td><%= computer.nserie %></td>
            <td><%= computer.brand %></td>
            <td><%= computer.model if computer.model %></td>
            <td><%= computer.Dependency.name if computer.Dependency %></td>
            <td>
              <%= link_to 'Mostrar', computer, class:'btn btn-default  btn-xs' %> 
              <%= link_to 'Editar', edit_computer_path(computer), class:'btn btn-default  btn-xs' %> 
              <%= link_to 'Borrar', computer, method: :delete, data: { confirm: 'Esta seguro?' } , 
                class:'btn btn-default  btn-xs'%>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>