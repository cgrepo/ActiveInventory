
<div class="container-fluid be-soft_purple large-padding">
  <p id="notice"><%= notice %></p>
  <h1>Listado de Computadoras</h1>
</div>
<div class="container-fluid">
  <div class="row be-gray">
    <div class="col-xs-2">
        INVENTARIO
    </div>
    <div class="col-xs-2">
        SERIE
    </div>
    <div class="col-xs-2">
        MARCA
    </div>
    <div class="col-xs-2">
        MODELO
    </div>
    <div class="col-xs">
        DEPENDENCIA
    </div>

  </div>

  <% @computers.each do |computer| %>
    <div class="row <%= cycle('be-soft_gray','odd')%>">
      <div class="col-xs">    
        <%= computer.ninventary %>
      </div>
      <div class="col-xs">
        <%= computer.nserie %>
      </div>
      <div class="col-xs">
        <%= computer.brand %>
      </div>
      <div class="col-xs">
          <%= computer.model if computer.model %>
      </div>
      <div class="col-xs">
          <%= computer.Dependency.name if computer.Dependency %>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= link_to 'Mostrar', computer, class:'btn btn-default  btn-xs' %> 
          <%= link_to 'Editar', edit_computer_path(computer), class:'btn btn-default  btn-xs' %> 
          <%= link_to 'Borrar', computer, method: :delete, data: { confirm: 'Esta seguro?' } , class:'btn btn-default  btn-xs'%>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs">
        <%= will_paginate @computers %>
        <br>
        <br>
        <%= button_to 'Agregar Computadora', new_computer_path, method: :get, class:'btn btn-default  btn-sm' %>        
    </div>
  </div>
</div>