<div class="container-fluid be-soft_purple large-padding">
  <p id="notice"><%= notice %></p>
  <h1>Listado de Redes</h1>
</div>
<div class="container-fluid">
  <div class="row be-soft_red">
    <div class="col-xs">
      <div class="box">
        <strong>Tipo de Enlace</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Locacion</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Rango IP</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>IP Modem</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">

      </div>
    </div>
  </div>
  <% @networks.each do |network| %>
    <div class="row <%= cycle('be-soft_gray','odd') %>">
      <div class="col-xs">
        <div class="box">
          <%= network.linktype %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= network.location %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= network.iprange %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= network.ip %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= link_to 'Mostrar', network, class:'btn btn-default  btn-sm' %>
          <%= link_to 'Editar', edit_network_path(network), class:'btn btn-default  btn-sm' %>
          <%= link_to 'Borrar', network, method: :delete, data: { confirm: 'Esta seguro?' }, class:'btn btn-default  btn-sm'   %>
        </div>
      </div>
    </div>  
      <tr>
        <td></td>
      </tr>
  <% end %>
</div>
<div>
  <%= will_paginate @networks %>
  <%= link_to 'Agregar Red', new_network_path, class:'btn btn-default  btn-sm' %>
  <%#= button_to 'Agregar red', new_network_path, method: :get %>
</div>