<div class="container-fluid be-soft_purple">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>
      <h1>Listado de Impresoras</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left"><%= will_paginate @printers %></span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right"><%= link_to 'Agregar', new_printer_path, class:'btn btn-default btn-lg be-gray' %></span>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="table-responsive no-margins">
    <table class="table table-hover table-striped">
      <thead>
        <th>Inventario</th>
        <th>Serie</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Tipo</th>
        <th>Dependencia</th>
        <th></th>
      </thead>
      <tbody>
        <% @printers.each do |printer| %>
          <tr>
            <td> <%= printer.ninventary %></td>
            <td> <%= printer.nserie %></td>
            <td> <%= printer.brand %></td>
            <td> <%= printer.model %></td>
            <td> <%= printer.genus %></td>
            <td> <%= printer.Dependency.name if printer.Dependency %></td>
            <td>
              <%= link_to 'Mostrar', printer, class:'btn btn-default  btn-sm' %>
              <%= link_to 'Editar', edit_printer_path(printer), class:'btn btn-default  btn-sm' %>
              <%= link_to 'Borrar', printer, method: :delete, data: { confirm: 'Esta seguro?' }, class:'btn btn-default  btn-sm' %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
