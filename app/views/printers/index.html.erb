<p id="notice"><%= notice %></p>

<h1>Listado de Impresoras</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs">
      <div class="box">
        <strong>No inventario</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>No serie</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Marca</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Modelo</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Tipo</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Dependencia</strong>
      </div>
    </div>
  </div>
  <% @printers.each do |printer| %>
    <div class="row">
      <div class="col-xs">
        <div class="box">
          <%= printer.ninventary %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= printer.nserie %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= printer.brand %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= printer.model %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= printer.genus %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= printer.Dependency.name %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= link_to 'Mostrar', printer %>
          <%= link_to 'Editar', edit_printer_path(printer) %>
          <%= link_to 'Borrar', printer, method: :delete, data: { confirm: 'Esta seguro?' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>

<%= link_to 'Agregar Impresora', new_printer_path %>
