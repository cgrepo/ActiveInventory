<%= form_for(@copier) do |f| %>
  <% if @copier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@copier.errors.count, "error") %> prohibida la capiadora de ser salvada:</h2>

      <ul>
      <% @copier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container-fluid large-padding be-round_ligth_gray">
    <div class="row">
      <div class="col-xs-1">        
        <%= f.label :Inventario %><br>
        <%= f.text_field :ninventary, class:'form-control smfont' %>
      </div>
      <div class="col-xs-2">
        <%= f.label :Serie %><br>
        <%= f.text_field :nserie, class:'form-control smfont' %>
      </div>
      <div class="col-xs-2">        
        <%= f.label :Marca %><br>
        <%= f.select :brand, [ ['CANON'], ['BROTHER'], ['XEROX'] ], {include_blank: true},{class:'btn  dropdown-toggle smfont'}  %>
      </div>
      <div class="col-xs-2">        
        <%= f.label :Modelo %><br>
        <%= f.text_field :model, class:'form-control smfont' %>
      </div>
      <div class="col-xs-2">        
        <%= f.label :Factura %><br>
        <%= f.text_field :nfactura, class:'form-control smfont' %>
      </div>
      <div class="col-xs-3">        
        <%= f.label :Fecha_Compra %><br>
        <%= f.date_select :buy_date %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs">        
        <%= f.label :Notas %><br>
        <%= f.text_area :notes, size:"70x3" %>
      </div>
      <div class="col-xs">        
        <%= f.label :Dependencia %><br>
        <%= f.collection_select(:Dependency_id, Dependency.all.order(:name), :id, :name, {include_blank: true}, 
          {class:'btn  dropdown-toggle smfont'} ) %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs">        
        <%= f.submit %><br>
        <br>
      </div>
    </div>
  </div>
<% end %>
