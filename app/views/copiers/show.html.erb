<p id="notice"><%= notice %></p>
<div class="container-fluid ">
  <div class="row">
    <div class="col-xs-4 large-padding be-gray">      
      <strong>No Inventario:</strong>
      <%= @copier.ninventary %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 large-padding be-gray">      
      <strong>No Serie:</strong>
      <%= @copier.nserie %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 large-padding be-gray">      
      <strong>Marca:</strong>
      <%= @copier.brand %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 large-padding be-gray">      
      <strong>Modelo:</strong>
      <%= @copier.model %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 large-padding be-gray">      
      <strong>ID factura:</strong>
      <%= @copier.nfactura %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 large-padding be-gray">      
        <strong>Fecha compra:</strong>
        <%= @copier.buy_date %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 large-padding be-gray">
        <strong>Notas:</strong>
        <%= @copier.notes %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 large-padding be-gray">
      <% if @copier.Dependency %>
        <strong>Dependencia:</strong>
        <%= @copier.Dependency.name %>
      <% end %>        
    </div>
  </div>
</div>
<%= link_to 'Editar', edit_copier_path(@copier), class:'btn btn-default btn-lg' %> |
<%= link_to 'Regresar', copiers_path, class:'btn btn-default btn-lg' %>