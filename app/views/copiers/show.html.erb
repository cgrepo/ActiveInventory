<p id="notice"><%= notice %></p>
<div class="container be-gray">
  <div class="row">
    <div class="col-xs ">      
      <p><strong>No Inventario:</strong>
      <%= @copier.ninventary %></p>
         
      <p><strong>No Serie:</strong>
      <%= @copier.nserie %></p>
   
      <p><strong>Marca:</strong>
      <%= @copier.brand %></p>
        
      <p><strong>Modelo:</strong>
      <%= @copier.model %></p>
     
      <p><strong>ID factura:</strong>
      <%= @copier.nfactura %></p>
     
      <p><strong>Fecha compra:</strong>
      <%= @copier.buy_date %></p>

      <p><strong>Notas:</strong>
      <%= @copier.notes %></p>

      <% if @copier.Dependency %></p>
        <p><strong>Dependencia:</strong>
        <%= @copier.Dependency.name %></p>
      <% end %></p>        
    </div>
  </div>
  <%= render partial:'layouts/user_mod', locals:{:entity => @copier} %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <span class="pull-right">
        <br>
        <%= link_to 'Editar', edit_copier_path(@copier), class:'btn btn-default btn-lg' %> |
        <%= link_to 'Regresar', copiers_path, class:'btn btn-default btn-lg' %>
      </span>
    </div>
  </div>
</div>