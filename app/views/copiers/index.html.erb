<div class="container-fluid be-soft_purple large-padding">
  <p id="notice"><%= notice %></p>
  <h1>Listado Copiadoras</h1>
</div>
<div class="container-fluid">
  <div class="row be-gray">
    <div class="col-xs-2">
      <strong>No Inventario</strong>
    </div>
    <div class="col-xs-2">
      <strong>No Serie</strong>
    </div>
    <div class="col-xs-2">      
      <strong>Marca</strong>
    </div>
    <div class="col-xs-2">      
      <strong>Modelo</strong>
    </div>
    <div class="col-xs-2">      
      <strong>Dependencia</strong>
    </div>
  </div>
  <% @copiers.each do |copier| %>
    <div class="row <%= cycle('be-soft_gray','odd')%>" >
      <div class="col-xs-2">        
          <%= copier.ninventary %>
      </div>
      <div class="col-xs-2">        
          <%= copier.nserie %>
      </div>
      <div class="col-xs-2">        
          <%= copier.brand %>
      </div>
      <div class="col-xs-2">        
          <%= copier.model %>
      </div>
      <div class="col-xs-2">        
        <%= copier.Dependency.name if copier.Dependency%>
      </div>
      <div class="col-xs-2">        
        <%= link_to 'Mostrar', copier,class:'btn btn-default  btn-sm' %>
        <%= link_to 'Editar', edit_copier_path(copier),class:'btn btn-default  btn-sm' %>
        <%= link_to 'Borrar', copier, method: :delete, data: { confirm: 'Esta seguro?' },class:'btn btn-default  btn-sm' %>
      </div>
    </div>
  <% end %>
</div>
<div>
  <%= will_paginate @copiers %>
  <br>
  <br>
  <%= link_to 'Agregar Copiadora', new_copier_path, class:'btn btn-default  btn-sm' %>
  <%#= button_to "Agregar Copiadora", new_copier_path, 
  #:id => "open-contacts-dialog-btn",
        #:class => "inbox-sf-add-btn tip", 
        :method => :get %>
  <%#= link_to 'Agregar Copiadora', new_copier_path, class: "button" %>
</div>