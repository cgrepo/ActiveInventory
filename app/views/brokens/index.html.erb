<div class="container-fluid be-soft_purple">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>
      <h1>Listado Equipos dados de Baja</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left"><%= will_paginate @brokens %></span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right"><%= button_to 'Agregar a Bajas', new_broken_path, method: :get, class:'btn btn-default btn-lg be-gray' %>
      </span>
    </div>
  </div>
</div>
<div class='container'>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>DELEGACION</th>
            <th>DEPENDENCIA</th>
            <th>TIPO</th>
            <th>IDENT</th>
            <th>pic1</th>
            <th>pic2</th>
            <th>pic3</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @brokens.each do |broken| %>
            <tr>
              <td><%= broken.Delegation.name %></td>
              <td><%= broken.Dependency.name %></td>
              <td><%= broken.gender %></td>
              <td>
                <% case broken.gender                       %>
                <% when 'COMP'                              %>
                <%   pc = Computer.find(broken.idEquipment) %>
                <%   if pc.ninventary.size > 0              %>
                <%=    pc.ninventary                        %>
                <%   else                                   %>
                <%=     pc.nserie                           %>
                <%   end                                    %>
                <% end                                      %>
              </td>
              </tr>
              
              <!--<td><%#= broken.notes %></td>
              <td><%#= broken.picOf %></td>
              <td><%#= broken.picSerie %></td>
              <td><%#= broken.pic %></td> -->
              <td><%= link_to 'Show', broken %></td>
              <!--<td><%#= link_to 'Edit', edit_broken_path(broken) %></td>-->
              <td><%= link_to 'Destroy', broken, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              
            
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
