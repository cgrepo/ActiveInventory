<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">BAJA EQUIPO</h4>
        </div>
        <div class="modal-body">
            <%= bootstrap_form_for(@broken, layout: :horizontal ) do |f| %>
                <%= f.hidden_field('idEquipment') %>
                <%= f.hidden_field('gender') %>
                <%= f.hidden_field('Dependency_id') %>
                <%= f.hidden_field('Delegation_id') %>
                <%= f.text_area_with_bootstrap  :notes,    label:'COMENTARIOS', label_col:'col-xs col-md-4', control_col:'col-xs col-md-8' %>
                <%#= f.file_field_with_bootstrap :picOf,    label:'Foto No oficial', label_col:'col-xs col-md-4', control_col:'col-xs col-md-8' %>
                <%#= f.file_field_with_bootstrap :picSerie, label:'Foto No serie', label_col:'col-xs col-md-4', control_col:'col-xs col-md-8' %>
                <%#= f.file_field_with_bootstrap :pic,      label:'Foto estado', label_col:'col-xs col-md-4', control_col:'col-xs col-md-8' %>
                <%= f.text_field_with_bootstrap :picOf,    label:'Nombre Foto No oficial', label_col:'col-xs col-md-6', control_col:'col-xs col-md-6' %>
                <%= f.text_field_with_bootstrap :picSerie, label:'Nombre Foto No serie', label_col:'col-xs col-md-6', control_col:'col-xs col-md-6' %>
                <%= f.text_field_with_bootstrap :pic,      label:'Nombre Foto estado', label_col:'col-xs col-md-6', control_col:'col-xs col-md-6' %>
                <%= f.submit  class:'btn btn-md btn-primary' %>
            <% end %>
        </div>
        <div class="modal-footer">
          <!--<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>-->
        </div>
      </div>
    </div>