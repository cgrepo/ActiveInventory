<%= form_for(@worker) do |f| %>
  <% if @worker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@worker.errors.count, "error") %> No se pudo salvar el usuario:</h2>

      <ul>
      <% @worker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container-fluid large-padding be-round_ligth_gray">
  <div class="row">
    <div class="col-lg">
      <div class="box">
        <%= f.label :Nombre %><br>
        <%= f.text_field :name %>
      </div>
      <div class="box">
        <%= f.label :Email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="box">
        <%= f.label :Perfil %><br>
        <%= f.text_area :profile, size:"90x8" %>
      </div>
      <div class="box">
        <%= f.label :Dependencia %><br>
        <%= f.collection_select(:Dependency_id, Dependency.all.order(:name), :id, :name, {include_blank: true}) %>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg">
      <div class="box">
        <br>
        <%= f.submit %>
      </div>
    </div>
  </div>
</div>  
<% end %>
