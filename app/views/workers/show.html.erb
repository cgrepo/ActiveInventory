<p id="notice"><%= notice %></p>
<div class="container be-gray">
  <div class="row">
    <div class="col-xs-12">
      <strong>Nombre:</strong><br>
	  	<%= @worker.name %><br>
      <strong>Email:</strong><br>
	  	<%= @worker.email %><br>
      <strong>Perfil:</strong><br>
	  	<%= @worker.profile %><br>
      <strong>Dependencia:</strong><br>
	  	<%= @worker.Dependency.name if @worker.Dependency %><br>
    </div>
    <%= render partial:'layouts/user_mod', locals:{:entity => @worker} %>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <span class="pull-right">
        <%= link_to 'Editar', edit_worker_path(@worker) , class:'btn btn-default btn-lg' %> |
        <%= link_to 'Regresar', workers_path , class:'btn btn-default btn-lg' %>
      </span>
    </div>
  </div>
</div>
