<div class="container-fluid be-soft_purple large-padding">
  <p id="notice"><%= notice %></p>
  <h1>Listado de Usuarios</h1>
</div>
<div class="container-fluid">
  <div class="row be-soft_red">
    <div class="col-xs-2">
      <strong>Nombre</strong>
    </div>
    <div class="col-xs-4">      
      <strong>Perfil</strong>
    </div>
    <div class="col-xs-3">      
      <strong>Dependencia</strong>
    </div>
  </div>
  <% @workers.each do |worker| %>
    <div class="row <%= cycle('be-soft_gray','odd')%>">
      <div class="col-xs-2">        
        <%= worker.name %>
      </div>
      <div class="col-xs-4">        
         <%= worker.profile %>
      </div>
      <div class="col-xs-4">        
          <%= worker.Dependency.name if worker.Dependency %>
      </div>
      <div class="col-xs">        
          <%= link_to 'Mostrar', worker, class:'btn btn-default  btn-sm' %></td>
          <%= link_to 'Editar', edit_worker_path(worker), class:'btn btn-default  btn-sm' %></td>
          <%= link_to 'Borrar', worker, method: :delete, data: { confirm: 'Esta seguro?' }, class:'btn btn-default  btn-sm' %>
      </div>
    </div>
  <% end %>
</div>
<%= will_paginate @workers %>
<br>
<br>

