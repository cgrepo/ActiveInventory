<p id="notice"><%= notice %></p>

<h1>Listado de UPS / REGULADORES</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs">
      <div class="box">
        <strong>No Inventario</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>No Serie</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Marca</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Modelo</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Bateria?</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Notas</strong>
      </div>
    </div>
    <div class="col-xs">
      <div class="box">
        <strong>Dependencia</strong>
      </div>
    </div>
    <div class="col-xs"><div class="box"></div></div>
  </div>
  <% @powers.each do |power| %>
    <div class="row">
      <div class="col-xs">
        <div class="box">
          <%= power.ninventary %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= power.nserie %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= power.brand %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= power.model %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= "SI" if power.no_break %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= power.notes %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= power.Dependency.name %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= link_to 'Mostrar', power %>
          <%= link_to 'Editar', edit_power_path(power) %>
          <%= link_to 'Borrar', power, method: :delete, data: { confirm: 'Esta usted seguro?' } %>
        </div>
      </div>
    </div> 
  <% end %>
</div>
