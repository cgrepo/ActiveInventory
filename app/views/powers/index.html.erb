<div class="container-fluid be-soft_purple large-padding">
  <p id="notice"><%= notice %></p>
  <h1>Listado de UPS / REGULADORES</h1>
</div>
<div class="container-fluid">
  <div class="row be-gray">
    <div class="col-xs-1">      
      <strong>Inventario</strong>
    </div>
    <div class="col-xs-1">      
      <strong>No Serie</strong>
    </div>
    <div class="col-xs-2">
      <strong>Marca</strong>
    </div>
    <div class="col-xs-2">
      <strong>Modelo</strong>
    </div>
    <div class="col-xs-1">
      <strong>Bateria?</strong>
    </div>
    <div class="col-xs">      
      <strong>Dependencia</strong>
    </div>
  </div>
  <% @powers.each do |power| %>
    <div class="row <%= cycle('be-soft_gray','odd')%>">
      <div class="col-xs-1">
        <%= power.ninventary %>
      </div>
      <div class="col-xs-1">        
          <%= power.nserie %>
      </div>
      <div class="col-xs-2">
          <%= power.brand %>
      </div>
      <div class="col-xs-2">        
        <%= power.model %>
      </div>
      <div class="col-xs-1">
        <%= "SI" if power.no_break %>
      </div>
      <div class="col-xs">
        <%= power.Dependency.name %>
      </div>
      <div class="col-xs">
          <%= link_to 'Mostrar', power, class:'btn btn-default  btn-sm' %>
          <%= link_to 'Editar', edit_power_path(power), class:'btn btn-default  btn-sm' %>
          <%= link_to 'Borrar', power, method: :delete, data: { confirm: 'Esta usted seguro?' }, class:'btn btn-default  btn-sm' %>
      </div>
    </div> 
  <% end %>
</div>
<div>
  <%= will_paginate @powers %>
  <br>
  <br>
  <%= link_to 'Agregar', new_power_path, class:'btn btn-default  btn-sm' %>
  <%#= button_to 'Agregar', new_power_path, method: :get %>
</div>