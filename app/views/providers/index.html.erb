<div class="container-fluid large-padding">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <p id="notice"><%= notice %></p>
      <h1>Listado Proveedores</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left">
        <%= will_paginate(@providers) %>
      </span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right">
        <%= link_to 'Agregar', new_provider_path, class:'btn btn-default btn-lg' %>
      </span>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs col-md-12">
      <div class="table-responsive no-margins">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Direccion</th>
              <th>Telefono(s)</th>
              <th>Rfc</th>
              <th>Email</th>
              <th colspan="2"></th>
            </tr>
          </thead>
  
          <tbody>
            <% @providers.each do |provider| %>
              <tr>
                <td><%= provider.name %></td>
                <td><%= provider.address %></td>
                <td><%= provider.telephone %></td>
                <td><%= provider.rfc %></td>
                <td><%= provider.email %></td>
                <td><%= link_to 'Editar', edit_provider_path(provider), class:'btn btn-default btn-sm' %></td>
                <td>
                  <%= link_to 'Borrar', provider, method: :delete, data: { confirm: 'Esta usted seguro?' }, 
                    class:'btn btn-default btn-sm'%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
