<div class="container-fluid be-soft_purple large-padding">
  <p id="notice"><%= notice %></p>
  <h1>Listado de Marcas de Procesadores</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-md-5">
      <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered">
          <thead>
            <th>Nombre</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <% @computer_brands.each do |computer_brand| %>
              <tr>
                <td><%= computer_brand.name %></td>
                <td>
                  <%= link_to 'Editar', edit_computer_brand_path(computer_brand), class:'btn btn-default  btn-sm' %>
                  <%= link_to 'Borrar', computer_brand, method: :delete, data: { confirm: 'Esta usted seguro?' }, 
                    class:'btn btn-default  btn-sm' %></td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-xs">
      <%= will_paginate @computer_brands %>
      <br>
      <%= link_to 'Agregar', new_computer_brand_path, class:'btn btn-default btn-lg' %>
    </div>
  </div>
</div>

