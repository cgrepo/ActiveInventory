<div class="container-fluid be-soft_purple large-padding">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>
      <h2>Listado de Equipo Telefonico</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left"><%= will_paginate @telephones %></span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right">
        <%= link_to 'Agregar', new_telephone_path, class:'btn btn-default btn-lg be-gray' %>
      </span>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="table-responsive no-margins">
    <table class="table table-hover table-striped">
      <thead>
        <th>Inventario</th>
        <th>Serie</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Tipo</th>
        <th>Dependencia</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <% @telephones.each do |telephone| %>
          <tr>
            <td> <%= telephone.ninventary %></td>
            <td> <%= telephone.nserie %></td>
            <td> <%= telephone.brand %></td>
            <td> <%= telephone.model %></td>
            <td> <%= telephone.genus %></td>
            <td> <%= telephone.number %></td>
            <td> <%= telephone.Dependency.name if telephone.Dependency %></td>
            <td> 
              <%= link_to 'Mostrar', telephone, class:'btn btn-default  btn-sm' %>
              <%= link_to 'Editar', edit_telephone_path(telephone), class:'btn btn-default  btn-sm' %>
              <%= link_to 'Borrar', telephone, method: :delete, data: { confirm: 'Esta usted seguro?' }, class:'btn btn-default  btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
