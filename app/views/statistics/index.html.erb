<div class="container-fluid be-soft_purple">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>
      <h1>Listado de Estadisticas</h1>
    </div>
  </div>
  <div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-left"><%= will_paginate @statistics %></span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right"><%= link_to 'Agregar', new_statistic_path, class:'btn btn-default btn-lg be-gray' %></span>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="table-responsive no-margins">
    <table class="table table-hover table-striped">
      <thead>
        <th>Mes de Toma</th>
        <th>Hojas Usadas</th>
        <th>Consumible</th>
        <th>Delegacion</th>
        <th>Dependencia</th>
        <th>Equipo</th>
        <th colspan='3'></th>
      </thead>
      <tbody>
        <% @statistics.each do |statistic| %>
          <tr>
            <td> <%= statistic.month %></td>
            <td align='center'> <%= statistic.sheets %></td>
            <td align='center'> <%= statistic.consumable %></td>
            <td align='rigth'> <%= statistic.Delegation.name %></td>
            <td > <%= statistic.Dependency.name %></td>
            <td>
              <% if statistic.Copier %>                
                <strong>COPIADORA</strong>
                <%= statistic.Copier.model %>
              <% end %>
              <% if statistic.Printer %>
                <strong>IMPRESORA</strong>
                <%= statistic.Printer.model %>
              <% end %>
            </td>
            <td>
              <%= link_to 'Mostrar', statistic, class:'btn btn-default  btn-sm' %>
              <%= link_to 'Editar', edit_statistic_path(statistic), class:'btn btn-default  btn-sm' %>
              <%= link_to 'Borrar', statistic, method: :delete, data: { confirm: 'Esta usted seguro?' }, class:'btn btn-default  btn-sm' %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>