<p id="notice"><%= notice %></p>

<h1>Listado de Estadisticas</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg">
        <div class="box">
          <strong>Mes de Toma</strong>
        </div>
    </div>
    <div class="col-lg">
        <div class="box">
          <strong>Hojas Usadas</strong>
        </div>
    </div>
    <div class="col-lg">
        <div class="box">
          <strong>Consumible</strong>
        </div>
    </div>
    <div class="col-lg">
      <div class="box">
        <strong>Equipo</strong>
      </div>
    </div>    
  </div>
  <% @statistics.each do |statistic| %>
    <div class="row">
      <div class="col-xs">
        <div class="box">
          <%= statistic.month %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= statistic.sheets %>
        </div>
      </div>
      <div class="col-xs">
        <div class="box">
          <%= statistic.consumable %>
        </div>
      </div>
      <% if statistic.Copier %>
        <div class="col-xs">
          <div class="box">
            <%= statistic.Copier %>
          </div>
        </div>
      <% end %>
      <% if statistic.Printer %>
        <div class="col-xs">
          <div class="box">
            <%= statistic.Printer %>
          </div>
        </div>
      <% end %>
      <div class="col-xs">
        <div class="box">
          <%= link_to 'Mostrar', statistic %>
          <%= link_to 'Editar', edit_statistic_path(statistic) %>
          <%= link_to 'Borrar', statistic, method: :delete, data: { confirm: 'Esta seguro?' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= will_paginate @statistics %>
<br>
<br>

<%#= link_to 'Agregar estadistica', new_statistic_path %>
<%= button_to 'Nueva estadistica', new_statistic_path, method: :get %>
