<div class="container-fluid be-soft_purple large-padding">
  <p id="notice"><%= notice %></p>
  <h1>Listado de Estadisticas</h1>
</div>
<div class="container-fluid">
  <div class="table-responsive no-margins">
    <table class="table table-hover table-striped">
      <thead>
        <th>Mes de Toma</th>
        <th>Hojas Usadas</th>
        <th>Consumible</th>
        <th>Equipo</th>
        <th></th>
      </thead>
      <tbody>
        <% @statistics.each do |statistic| %>
          <tr>
            <td> <%= statistic.month %></td>
            <td> <%= statistic.sheets %></td>
            <td> <%= statistic.consumable %></td>
            <td>
              <% if statistic.Copier %>                
                <%= statistic.Copier %>
              <% end %>
              <% if statistic.Printer %> 
                <%= statistic.Printer %>
              <% end %>
            </td>
            <td>
              <%= link_to 'Mostrar', statistic, class:'btn btn-default  btn-sm' %>
              <%= link_to 'Editar', edit_statistic_path(statistic), class:'btn btn-default  btn-sm' %>
              <%= link_to 'Borrar', statistic, method: :delete, data: { confirm: 'Esta seguro?' }, class:'btn btn-default  btn-sm' %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= will_paginate @statistics %>
<br>
<%= link_to 'Agregar estadistica', new_statistic_path, class:'btn btn-default  btn-sm' %>

