<div class="container-fluid be-soft_purple large-padding">
  <p id="notice"><%= notice %></p>
  <h1>Listado de Estadisticas</h1>
</div>
<div class="container-fluid">
  <div class="row be-soft_red">
    <div class="col-xs-2">
        <strong>Mes de Toma</strong>
    </div>
    <div class="col-xs-2">       
        <strong>Hojas Usadas</strong>
    </div>
    <div class="col-xs-1">        
        <strong>Consumible</strong>
    </div>
    <div class="col-xs">
      <strong>Equipo</strong>
    </div>    
  </div>
  <% @statistics.each do |statistic| %>
    <div class="row <%= cycle('be-soft_gray','odd')%>">
      <div class="col-xs-2">
        <%= statistic.month %>
      </div>
      <div class="col-xs-2">       
        <%= statistic.sheets %>
      </div>
      <div class="col-xs-1">        
        <%= statistic.consumable %>
      </div>
      <div class="col-xs-3">
        <% if statistic.Copier %>                
          <%= statistic.Copier %>
        <% end %>
        <% if statistic.Printer %> 
          <%= statistic.Printer %>
        <% end %>
      </div>
      <div class="col-xs-3">
        <%= link_to 'Mostrar', statistic, class:'btn btn-default  btn-sm' %>
        <%= link_to 'Editar', edit_statistic_path(statistic), class:'btn btn-default  btn-sm' %>
        <%= link_to 'Borrar', statistic, method: :delete, data: { confirm: 'Esta seguro?' }, class:'btn btn-default  btn-sm' %>
      </div>
    </div>
  <% end %>
</div>
<%= will_paginate @statistics %>
<br>
<br>

