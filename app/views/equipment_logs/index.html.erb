<div class="container-fluid large-padding">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <p id="notice"><%= notice %></p>
      <h1>Bitacora de Equipos</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <span class="pull-left">
        <%= will_paginate(@equipment_logs) %>
      </span>
    </div>
    <div class="col-xs-6 col-md-6">
      <span class="pull-right">
      <%= link_to 'Nuevo registro', new_equipment_log_path, class:'btn btn-default btn-lg' %>
      </span>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs col-md-12">
      <div class="table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Tipo</th>
              <th>Clave</th>
              <th>Ingreso </th>
              <th>Diagnostico</th>
              <th>Solucion</th>
              <th>Salida</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @equipment_logs.each do |equipment_log| %>
              <tr>
                <td><%= equipment_log.genus %></td>
                <td><%= equipment_log.key %></td>
                <td><%= equipment_log.inDate %></td>
                <td><%= equipment_log.diagnosis %></td>
                <td><%= equipment_log.solution %></td>
                <td><%= equipment_log.outDate %></td>
                <td><%= link_to 'Mostar', equipment_log,class:'btn btn-default  btn-sm' %></td>
                <td><%= link_to 'Editar', edit_equipment_log_path(equipment_log),class:'btn btn-default  btn-sm' %></td>
                <td><%= link_to 'Borrar', equipment_log, method: :delete, data: { confirm: 'Are you sure?' },
                class:'btn btn-default  btn-sm' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
