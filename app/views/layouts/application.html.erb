<!DOCTYPE html>
<html>
<head>
  <title>ActiveInventory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="myheader">
    <div class="container-fluid ">
      <div class="row large-padding be-gray">
        <div class="col-xs">
          <% if logged_in? %>
           	<span class="pull-right">
           	 	Usuario <%= current_user.username.upcase %> |
              <%= link_to 'ADMIN', admins_index_path %> |
           	 	<%= link_to "Logout", logout_path, method: :delete %> <span class="glyphicon glyphicon-log-in"></span>
           	 </span>
          <% end %>
          <% flash.each do |key, value| %>
           	<p id='<%= key %>'><%= value %></p>
          <% end %>
           <%= logged_in? %>
        </div>
      </div>
    </div>
    <div class="container-fluid be-gray white">
      <div class="row">
        <div class="col-xs">
          <nav class="navbar navbar-default be-gray  no-borders">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
              <ul class="nav navbar-nav">
                <li><%= link_to ' DEPENDENCIAS', dependencies_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-home' %></li>
                <li><%= link_to ' USUARIOS', workers_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-user' %></li>
                <li><%= link_to ' NETWORKS', networks_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-random' %></li>
                <li><%= link_to ' COMPUTADORAS', computers_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-object-align-bottom' %></li>
                <li><%= link_to ' MONITORES', screens_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-blackboard' %></li>
                <li><%= link_to ' UPS/REGULADORES', powers_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-flash' %></li>
                <li><%= link_to ' IMPRESORAS', printers_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-print' %></li>
                <li><%= link_to ' COPIADORAS', copiers_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-tint' %></li>
                <li><%= link_to ' ESTADISTICAS', statistics_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-stats' %></li>
                <li><%= link_to ' CONSUMIBLES', consumables_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-cd' %></li>
                <li><%= link_to ' TELEFONIA', telephones_path, 
                class:'btn btn-primary btn-sm btn-transparent xsfont glyphicon glyphicon-earphone' %></li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </section>
  
  <%= yield %>
  
</body>
</html>
